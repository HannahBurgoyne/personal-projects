{
  "name": "flashcards-app",
  "version": "1.0.0",
  "description": "an app which allows users to make and use custom flashcards",
  "main": "server/index.ts",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "run-p dev:*",
    "dev:client": "vite",
    "dev:server": "tsx watch server/index.ts",
    "build": "run-s build:*",
    "build:client": "vite build",
    "build:server": "esbuild --packages=external --platform=node --format=esm --outfile=dist/server.js --bundle server/index.ts",
    "test": "vitest",
    "knex": "knex --knexfile ./server/db/knexfile.js",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "format": "prettier -w '**/*.{js,jsx,ts,tsx}'",
    "db:reset": "tsx server/db/reset.ts"
  },
  "keywords": [
    "flashcards",
    "app",
    "fullstack"
  ],
  "author": "Hannah Burgoyne",
  "license": "ISC",
  "dependencies": {
    "@tanstack/react-query": "^4.33.0",
    "@tanstack/react-query-devtools": "^4.33.0",
    "animate.css": "^4.1.1",
    "body-parser": "^1.20.2",
    "bootstrap": "^5.3.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "framer-motion": "^10.16.4",
    "knex": "^2.5.1",
    "pg": "^8.11.3",
    "run-p": "^0.0.0",
    "sqlite3": "^5.1.6",
    "superagent": "^8.1.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/superagent": "^4.1.18",
    "@vitejs/plugin-react": "^4.0.4",
    "@vitest/coverage-c8": "^0.30.1",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "2.6.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.11.2",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.7",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vitest": "^0.34.1"
  },
  "browserslist": "> 2%, not dead",
  "engines": {
    "node": ">=18.0.0"
  }
}
